{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist-electron",
        "rootDir": "./electron",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020"
        ]
    },
    "include": [
        "electron/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron",
        "src"
    ]
}